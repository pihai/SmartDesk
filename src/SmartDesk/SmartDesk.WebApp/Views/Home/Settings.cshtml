@using System

@model SmartDesk.WebApp.ViewModels.SettingsViewModel

@{
  ViewData["Title"] = "Home Page";
}
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Settings</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                Dashboard Settings
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        @using (Html.BeginForm(FormMethod.Post)) {


                            <div class="form-group">
                                <label>Table height</label>
                                <div class="input-group">
                                    @Html.TextBoxFor(model => model.Height, new { type = "number", @class = "form-control", placeholder = "Enter height", aria_describedby = "height-unit" })
                                    <span class="input-group-addon" id="height-unit">cm</span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Target standing time</label>
                                @Html.TextBoxFor(model => model.StandingTarget, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <label>Device</label>
                                @Html.TextBoxFor(model => model.DeviceId, new { @class = "form-control" })
                            </div>

                            <button type="submit" class="btn btn-default">Save</button>
                        }
                    </div>
                    <!-- /.col-lg-6 (nested) -->

                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-6 -->
</div>
<!-- /.row -->